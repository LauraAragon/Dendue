<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lauraaragon.dendue.ChallengeTwoActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPalabraUno"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPalabraDos"
        android:layout_alignBottom="@+id/btnPalabraUno"
        android:layout_toRightOf="@+id/btnPalabraUno"
        android:layout_toEndOf="@+id/btnPalabraUno" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPalabraTres"
        android:layout_alignBottom="@+id/btnPalabraDos"
        android:layout_toRightOf="@+id/btnPalabraDos"
        android:layout_toEndOf="@+id/btnPalabraDos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPalabraCuatro"
        android:layout_alignBottom="@+id/btnPalabraTres"
        android:layout_toRightOf="@+id/btnPalabraTres"
        android:layout_toEndOf="@+id/btnPalabraTres" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EL"
        android:id="@+id/textViewOneChallengeTwo"
        android:layout_toEndOf="@+id/btnPalabraUno"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_large_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOSQUE"
        android:id="@+id/textViewTwoChallengeTwo"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnPalabraUno"
        android:layout_toEndOf="@+id/btnPalabraUno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ES"
        android:id="@+id/textViewThreeChallengeTwo"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnPalabraDos"
        android:layout_toEndOf="@+id/btnPalabraDos"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HERMOSO"
        android:id="@+id/textViewFourChallengeTwo"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textViewThreeChallengeTwo"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/textViewThreeChallengeTwo" />
</RelativeLayout>
