<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lauraaragon.dendue.temporalpaula.MapaActivity"
    android:background="@drawable/mapa_fondo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ancla"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="99dp"
        android:layout_height="117dp"
        android:id="@+id/nivel1"
        android:src="@drawable/mapa_nivel1_desactivado"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="0dp"
        android:layout_alignEnd="@id/ancla" />

    <ImageButton
        android:layout_width="114dp"
        android:layout_height="153dp"
        android:id="@+id/nivel2"
        android:src="@drawable/mapa_nivel2_desactivado"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_marginBottom="0dp"
        android:layout_alignParentEnd="true"
        android:layout_alignEnd="@id/ancla"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/ancla"
        android:layout_marginTop="-15dp" />

    <ImageButton
        android:layout_width="175dp"
        android:layout_height="81dp"
        android:id="@+id/nivel3"
        android:background="@null"
        android:src="@drawable/mapa_nivel3_desactivado"
        android:scaleType="fitXY"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="5dp"
        android:layout_alignEnd="@id/ancla"
        android:layout_below="@+id/ancla"
        android:layout_marginTop="45dp" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="108dp"
        android:id="@+id/nivel4"
        android:scaleType="fitXY"
        android:src="@drawable/mapa_nivel4_desactivado"
        android:background="@null"
        android:layout_alignStart="@id/ancla"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="-25dp"
        android:layout_alignBottom="@+id/ancla" />

    <ImageButton
        android:layout_width="117dp"
        android:layout_height="105dp"
        android:id="@+id/nivel5"
        android:layout_alignParentStart="false"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/mapa_nivel5_desactivado"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="80dp"
        android:layout_alignEnd="@+id/ancla"
        android:layout_alignBottom="@+id/ancla"
        android:layout_marginRight="20dp" />

    <ImageButton
        android:layout_width="135dp"
        android:layout_height="140dp"
        android:id="@+id/nivel6"
        android:layout_above="@+id/ancla"
        android:layout_alignStart="@id/ancla"
        android:background="@null"
        android:src="@drawable/mapa_nivel6_desactivado"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="-5dp" />
</RelativeLayout>
