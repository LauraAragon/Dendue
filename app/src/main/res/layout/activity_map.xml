<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lauraaragon.dendue.MapActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto1"
        android:id="@+id/btnRetoUno"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto2"
        android:id="@+id/btnRetoDos"
        android:layout_above="@+id/btnRetoUno"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto3"
        android:id="@+id/btnRetoTres"
        android:layout_above="@+id/btnRetoDos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto4"
        android:id="@+id/btnRetoCuatro"
        android:layout_above="@+id/btnRetoTres"
        android:layout_alignRight="@+id/btnRetoDos"
        android:layout_alignEnd="@+id/btnRetoDos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto5"
        android:id="@+id/btnRetoCinco"
        android:layout_above="@+id/btnRetoCuatro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reto6"
        android:id="@+id/btnRetoSeis"
        android:layout_above="@+id/btnRetoCinco"
        android:layout_alignRight="@+id/btnRetoCuatro"
        android:layout_alignEnd="@+id/btnRetoCuatro" />
</RelativeLayout>
